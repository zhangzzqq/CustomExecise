<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <LinearLayout
        android:id="@+id/user_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.example.login.DelEdit
            android:id="@+id/et_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            app:mHint="请输入手机号"
            app:mHintColor="@color/color_999999"
            app:mInputType="number"
            app:mMaxLength="16"
            app:mShowAble="false"
            app:mTextColor="@color/color_999999"
            app:mTextSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_999999" />

        <com.example.login.DelEdit
            android:id="@+id/et_passward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            app:mHint="请输入密码"
            app:mHintColor="@color/color_999999"
            app:mInputType="password"
            app:mMaxLength="11"
            app:mShowAble="true"
            app:mTextColor="@color/color_999999"
            app:mTextSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_999999" />
    </LinearLayout>


    <Button
        android:id="@+id/bg_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_pwd"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/selector_bt_bg"
        android:text="登录"
        android:textColor="@android:color/white"
        android:textSize="18sp" />


</RelativeLayout>